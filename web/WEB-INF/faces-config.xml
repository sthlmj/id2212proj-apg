<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <navigation-rule>
        <from-view-id>/register.xhtml</from-view-id>
        <navigation-case>
            <if>#{!registerview.success}</if>
            <to-view-id>/Registration_Error.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <if>#{registerview.success}</if>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        
    </navigation-rule>
 
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>        
        <navigation-case>
            <if>#{adminView.signedIn}</if>
            <to-view-id>/adminarea.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <if>#{!customerview.signedIn and !adminView.signedIn}</if>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <if>#{customerView.signedIn}</if>
            <to-view-id>/userArea.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
       <from-view-id>/userArea.xhtml</from-view-id> 
        <navigation-case>
            <if>#{!customerview.signedIn}</if>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/adminarea.xhtml</from-view-id>
        <navigation-case>
            <if>#{!adminView.signedIn}</if>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>   
</faces-config>
